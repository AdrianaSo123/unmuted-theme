{% comment %}
  Custom Unmuted Footer
{% endcomment %}

<footer class="unmuted-footer">
  <div class="unmuted-footer__container page-width">
    <div class="unmuted-footer__grid">
      
      {%- comment -%} Brand Column {%- endcomment -%}
      <div class="unmuted-footer__column">
        {%- if section.settings.logo != blank -%}
          <img src="{{ section.settings.logo | image_url: width: 150 }}" alt="Unmuted" class="unmuted-footer__logo">
        {%- else -%}
          <h3 class="unmuted-footer__brand">{{ section.settings.brand_name }}</h3>
        {%- endif -%}
        
        {%- if section.settings.tagline != blank -%}
          <p class="unmuted-footer__tagline">{{ section.settings.tagline }}</p>
        {%- endif -%}
        
        {%- if section.settings.email != blank -%}
          <p class="unmuted-footer__contact">
            <strong>Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
          </p>
        {%- endif -%}
      </div>

      {%- comment -%} Featured Shows Column {%- endcomment -%}
      <div class="unmuted-footer__column">
        <h4 class="unmuted-footer__heading">Featured Shows</h4>
        <ul class="unmuted-footer__list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'show_link' -%}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>

      {%- comment -%} Quick Links Column {%- endcomment -%}
      <div class="unmuted-footer__column">
        <h4 class="unmuted-footer__heading">Quick Links</h4>
        <ul class="unmuted-footer__list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'quick_link' -%}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>

      {%- comment -%} Connect Column {%- endcomment -%}
      <div class="unmuted-footer__column">
        <h4 class="unmuted-footer__heading">Connect With Us</h4>
        <div class="unmuted-footer__social">
          {%- if section.settings.instagram_url != blank -%}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" aria-label="Instagram">
