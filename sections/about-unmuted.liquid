                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor"><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512z"/></svg>
                {%- endcase -%}
              </div>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <h3 class="about-unmuted__value-title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="about-unmuted__value-description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .about-unmuted {
    padding: var(--space-16) 0;
    background: #FFFFFF;
  }

  .about-unmuted__heading {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    color: #000000;
    text-align: center;
    margin-bottom: 80px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__heading {
      font-size: 3.5rem;
      margin-bottom: 100px;
    }
  }

  @media screen and (min-width: 990px) {
    .about-unmuted__heading {
      font-size: 4.5rem;
    }
  }

  .about-unmuted__content {
    display: flex;
    flex-direction: column;
    gap: 100px;
  }

  @media screen and (max-width: 749px) {
    .about-unmuted__content {
      gap: 80px;
    }
  }

  /* Story Section */
  .about-unmuted__story {
    display: flex;
    flex-direction: column;
    gap: 80px;
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .about-unmuted__story {
      gap: 60px;
    }
  }

  .about-unmuted__image-wrapper {
    position: relative;
  }

  .about-unmuted__image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .about-unmuted__text {
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  @media screen and (max-width: 749px) {
    .about-unmuted__text {
      gap: 60px;
    }
  }

  .about-unmuted__mission-title,
  .about-unmuted__why-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin: 0 0 28px 0;
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    padding-top: 24px;
  }

  .about-unmuted__mission-title::before,
  .about-unmuted__why-title::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--purple-500);
    border-radius: 2px;
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__mission-title,
    .about-unmuted__why-title {
      font-size: 1.75rem;
      margin-bottom: 36px;
      padding-top: 28px;
    }

    .about-unmuted__mission-title::before,
    .about-unmuted__why-title::before {
      width: 80px;
      height: 4px;
    }
  }

  .about-unmuted__mission-text,
  .about-unmuted__why-text {
    font-size: 1.0625rem;
    color: #374151;
    line-height: 1.9;
    font-weight: 400;
    max-width: 650px;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__mission-text,
    .about-unmuted__why-text {
      font-size: 1.1875rem;
      line-height: 2;
    }
  }

  .about-unmuted__mission-text p,
  .about-unmuted__why-text p {
    margin-bottom: 20px;
  }

  .about-unmuted__mission-text p:last-child,
  .about-unmuted__why-text p:last-child {
    margin-bottom: 0;
  }

  .about-unmuted__mission-text p:first-of-type,
  .about-unmuted__why-text p:first-of-type {
    font-size: 1.125rem;
    font-weight: 500;
    color: #111827;
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__mission-text p:first-of-type,
    .about-unmuted__why-text p:first-of-type {
      font-size: 1.25rem;
    }
  }

  /* Values Grid */
  .about-unmuted__values {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-top: 0;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__values {
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
    }
  }

  .about-unmuted__value-card {
    text-align: center;
    padding: 48px 32px;
    background: #FFFFFF !important;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .about-unmuted__value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__value-card {
      padding: 56px 40px;
    }
  }

  /* Icon Styling */
  .about-unmuted__value-icon {
    width: 96px;
    height: 96px;
    margin: 0 auto 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--purple-500), var(--pink-500));
    border-radius: 50%;
    box-shadow: 0 8px 24px rgba(124, 58, 237, 0.3);
  }

  .about-unmuted__value-icon svg {
    width: 48px;
    height: 48px;
    color: var(--white);
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__value-icon {
      width: 112px;
      height: 112px;
      margin-bottom: 36px;
    }

    .about-unmuted__value-icon svg {
      width: 56px;
      height: 56px;
    }
  }

  .about-unmuted__value-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 20px;
    line-height: 1.3;
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__value-title {
      font-size: 1.75rem;
      margin-bottom: 24px;
    }
  }

  .about-unmuted__value-description {
    font-size: 1.0625rem;
    color: #4B5563;
    line-height: 1.8;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .about-unmuted__value-description {
      font-size: 1.125rem;
      line-height: 1.9;
    }
  }

  /* Animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .about-unmuted__story {
    animation: fadeInUp 0.8s ease-out;
  }

  .about-unmuted__value-card {
    animation: fadeInUp 0.8s ease-out;
  }

  .about-unmuted__value-card:nth-child(1) {
    animation-delay: 0.1s;
  }

  .about-unmuted__value-card:nth-child(2) {
    animation-delay: 0.2s;
  }

  .about-unmuted__value-card:nth-child(3) {
    animation-delay: 0.3s;
  }
</style>

