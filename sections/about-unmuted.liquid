{% comment %}
  About Unmuted Section - Simple 3 value cards
{% endcomment %}

<div class="about-unmuted section color-{{ section.settings.color_scheme }}" id="about-unmuted">
  <div class="about-unmuted__container page-width">
    {%- if section.blocks.size > 0 -%}
      <div class="about-unmuted__values">
        {%- for block in section.blocks -%}
          {%- assign icon_name = block.settings.icon | default: 'lightbulb' -%}
          <div class="about-unmuted__value-card" {{ block.shopify_attributes }}>
