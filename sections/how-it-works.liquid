{% comment %}
  How It Works Section
{% endcomment %}

<section class="how-it-works" id="how-it-works-{{ section.id }}">
  <div class="how-it-works__container page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="how-it-works__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.subheading != blank -%}
      <p class="how-it-works__subheading">{{ section.settings.subheading }}</p>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="how-it-works__grid">
        {%- for block in section.blocks -%}
          <div class="step-card" {{ block.shopify_attributes }}>
            {%- if block.settings.number != blank -%}
              <div class="step-card__number">{{ block.settings.number }}</div>
            {%- endif -%}
            
            {%- if block.settings.image != blank -%}
              <div class="step-card__image">
                <img
                  src="{{ block.settings.image | image_url: width: 400 }}"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  width="400"
                  height="300"
                >
              </div>
            {%- endif -%}
            
            <div class="step-card__content">
              {%- if block.settings.title != blank -%}
                <h3 class="step-card__title">{{ block.settings.title }}</h3>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <p class="step-card__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .how-it-works {
    padding: 80px 0;
    background: #F9FAFB;
  }

  .how-it-works__heading {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 16px;
    color: #111827;
    background: linear-gradient(135deg, var(--purple-500), var(--pink-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media screen and (min-width: 750px) {
    .how-it-works__heading {
      font-size: 3rem;
    }
  }

  .how-it-works__subheading {
    text-align: center;
    font-size: 1.125rem;
    color: #6B7280;
    margin-bottom: 60px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .how-it-works__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
  }

  @media screen and (min-width: 990px) {
    .how-it-works__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
    }
  }

  .step-card {
    text-align: center;
    position: relative;
  }

  .step-card__number {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--purple-500), var(--pink-500));
    color: var(--white);
    font-size: 1.5rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
  }

  .step-card__image {
    width: 100%;
    height: 240px;
    overflow: hidden;
    border-radius: 12px;
    margin-bottom: 24px;
    background: #E5E7EB;
  }

  .step-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .step-card__title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 12px;
  }

  .step-card__description {
    font-size: 1rem;
    color: #4B5563;
    line-height: 1.7;
  }
</style>

{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How It Works"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Commentary that's actually worth your time"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Step Number",
          "default": "1"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Step Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Choose Your Show"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Start with any of our featured shows."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "number": "1",
            "title": "Choose Your Show",
            "description": "Start with any of our featured shows: Gossip Girl, Pretty Little Liars, Teen Wolf, The Vampire Diaries, Glee, or The O.C. Each show page features curated analysis from multiple creators."
          }
